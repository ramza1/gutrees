<div class="top_panel">
  <div class="container-fluid">
    <div class="stamp">
      <div class="btm_shadow_l">
        <div class="shadow-top"></div>
      </div>
      <div class="stamp_wrap">
        <div class="stamp_tp"></div>
        <div class="stamp_bt"></div>
        <div class="stamp_ct">
          <img src="<%= user.image %>" width="140" height="140">
        </div>
      </div>
    </div>
    <div class="user_tp letter_pressed">
          <div class="user_meta">
            <div class="btn-toolbar" style="margin-top: 0;">
              <a class="btn " href="#">
                <i class=" icon-arrow-up"></i>
              </a>
               <span class="btn-group">
           <a class="btn dropdown-toggle " data-toggle="dropdown" href="#">
             Action
             <span class="caret"></span>
           </a>
           <ul class="top_arrowed dropdown-menu">
             <li><%= link_to "Start A branch", new_branch_path %></li>
             <li><%= link_to "About us", about_us_url %></li>
             <li><%= link_to "Terms And conditions", terms_url %></li>
             <li><%= link_to "Privacy and Policies", policy_url %></li>
           </ul>
         </span>
            </div>
      </div>
      <%= form_tag  search_box_path, :method => 'get', :class => "form-inline search pull-left"  do %>
          <div class="input-append">
          <%= text_field_tag :q, @q, :placeholder => "search", :class => "input-xlarge" %>
          <button type="submit" class="btn"><i class="icon-search"></i></button>
          </div>
      <% end %>
      <h5 class="light_header name ui-text-inline"> <%= user.name %></h5>
      <div class="btm_shadow_r span10">
        <div class="shadow-top"></div>
      </div>
    </div>


  </div>
</div>